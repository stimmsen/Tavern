{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tavern",
  "version": "0.1.0",
  "identifier": "gg.tavern.desktop",
  "build": {
    "beforeDevCommand": "npm --prefix ../voice-engine run dev",
    "beforeBuildCommand": "npm --prefix ../voice-engine run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../voice-engine"
  },
  "app": {
    "windows": [
      {
        "title": "Tavern",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.ico"],
    "targets": ["dmg", "msi", "appimage", "deb"]
  }
}
